<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50sp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/tv_listAction"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="#E91E63"
        android:src="@drawable/ic_location_on_white_32dp"/>

    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:text="Tanggal"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/table_content_cell_bg"/>

    <TextView
        android:id="@+id/tv_waktuLogin"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:text="Waktu Login"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_waktuLogout"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:text="Waktu Logout"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="20sp"
        android:textColor="@android:color/black" />

</LinearLayout>